<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:layout_margin="5dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="0dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#86281c">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="TITLE"
                android:id="@+id/service_card_title"
                android:layout_marginTop="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="#FFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="PRICE"
                android:id="@+id/service_card_price"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_width="3000dp"
                android:layout_height="wrap_content"
                android:text="Some description goes here"
                android:id="@+id/service_card_desc"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="#FFF"
                android:layout_marginRight="20dp" />

        </RelativeLayout>

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/service_card_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/hour"
            app:siBorderColor="@color/colorAccent"
            app:siBorderWidth="1dp"
            android:layout_marginTop="10dp" />
    </FrameLayout>



</android.support.v7.widget.CardView>